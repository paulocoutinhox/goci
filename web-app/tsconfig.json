{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"removeComments": false,
		"noImplicitAny": false,
		"suppressImplicitAnyIndexErrors": true
	},
	"exclude": [
		"node_modules",
		"dist",
		"typings/index",
		"typings/index.d.ts"
	],
	"angularCompilerOptions": {
		"genDir": "./ngfactory"
	}
}
